<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Personal Profile"
            android:textAlignment="center"
            android:textSize="100px" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvProfilePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="*Click here to see all the available profile pics"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Change your profile picture" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listViewOptions"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHAT NOW" />

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="log out" />

    </LinearLayout>

</ScrollView>